.row#start-project-first-row
	.container
		.row
			.span2
				= link_to image_tag("mobb_logo.png", class: "brand", style: "margin-top: 10px;"), static_pages_home_page_path
			.span7
				%ul.nav.nav-tabs
					%li#about
						= link_to "About Idea Mobb", static_pages_about_path, id: "about"
					%li#browse
						= link_to "Browse", static_pages_browse_path, id: "browse"
					%li#start					
						= link_to "Start", static_pages_start_project_path, id: "start"
			.span3
				.row-fluid
					.span12
						%form
							= link_to "Log in", static_pages_login_path, class: "btn btn-small btn-success"
							= link_to " Sign up", static_pages_login_path, class: "btn btn-small btn-primary"

				.row-fluid
					.span12
						%form.form-search
							%input.input-medium.search-query{type: "text",placeholder: "To search type..."}
							%i.icon-search

.row#login-second-row
	.container
		.row
			%h3
				%center
					Log in with Facebook
			.row.span4.offset4
				.row.hr-row
					%hr.hr-row{style:"width:90%;"}
		.row.span4.offset4						
			= link_to image_tag("facebook_login.png", style: "margin-top: 30px;"), "http://facebook.com"
		.row
			.span5
				%h3 Log In
				%hr.hr-row

				.row-fluid
					%input{type:"email", placeholder:"Email"}
				.row-fluid
					%a.pull-right forgot your password?
				.row-fluid
					%input{type:"password", placeholder:"Password", style: "margin-top: 0px;"}
				.row-fluid
					%label.checkbox
						%input{type:"checkbox"}
						Remember Me
				.row-fluid{style: "margin-top: 20px;"}
					%button.btn.btn-success.btn-large Log me in!
			.span5.offset2
				%h3 New to Idea Mobb
				%hr.hr-row
				.row-fluid
					%input{type:"text", placeholder:"Full Name", style:"margin-top:30px;"}
				.row-fluid
					%input{type:"email", placeholder:"Email"}
				.row-fluid
					%input{type:"email", placeholder:"Confirm Email"}
				.row-fluid
					%input.icon-envelope{type:"password", placeholder:"Password"}
						
				.row-fluid
					%input{type:"password", placeholder:"Confirm Password"}
				.row-fluid
					%label.checkbox
						%input{type:"checkbox"}
						Yes, I want the weekly Newsletter
				.row-fluid{style: "margin-top: 20px;"}
					.span4
						%button.btn.btn-success.btn-large Log me in!					
					.span8					
						%span by signing up, you agree to IdeaMobb's
						%br
						%a terms and conditions


				
